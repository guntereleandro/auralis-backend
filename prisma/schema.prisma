generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  fullName    String
  displayName String?
  email       String   @unique
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactions  Transaction[]
  familyMembers FamilyMember[]
  splits        Split[]
  ownedFamilies Family[]

  @@map("users")
}

model Family {
  id           String         @id @default(uuid())
  name         String
  ownerId      String
  owner        User           @relation(fields: [ownerId], references: [id])
  members      FamilyMember[]
  transactions Transaction[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@map("families")
}

model FamilyMember {
  id       String     @id @default(uuid())
  familyId String
  family   Family     @relation(fields: [familyId], references: [id], onDelete: Cascade)
  userId   String
  user     User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  role     FamilyRole @default(MEMBER)
  joinedAt DateTime   @default(now())

  @@unique([familyId, userId])
  @@map("family_members")
}

model Transaction {
  id          String        @id @default(uuid())
  type        TransactionType
  amount      Decimal
  description String
  date        DateTime      @default(now())
  category    String?
  isPersonal  Boolean       @default(true)

  userId      String        // ← quem PAGOU de fato a conta (o "credor")
  user        User          @relation(fields: [userId], references: [id])

  familyId    String?
  family      Family?       @relation(fields: [familyId], references: [id])

  splitType   SplitType?    // ← NOVO CAMPO (essencial)
  splits      Split[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("transactions")
}

model Split {
  id            String      @id @default(uuid())
  transactionId String
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  amount        Decimal     // quanto esta pessoa deve contribuir
  percentage    Decimal     // porcentagem que esta pessoa assume

  @@unique([transactionId, userId])
  @@map("splits")
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum FamilyRole {
  OWNER
  MEMBER
}

// ==================== NOVO ENUM ====================
enum SplitType {
  EQUAL       // dividir igualmente entre todos os membros
  PERCENTAGE  // definir % para cada membro
  MANUAL      // definir valor exato para cada membro
  SINGLE      // somente uma pessoa paga (sem rateio)
}
